import java.util.*;

public class UnixStyleArgsParser {
    public static void main(String[] args) {
        Map<String, String> argMap = new HashMap<>();
        List<String> extras = new ArrayList<>();
        String scriptName = null;

        for (int i = 0; i < args.length; i++) {
            String current = args[i];

            if ("--caller-script".equals(current)) {
                if (i + 1 < args.length) {
                    scriptName = args[i + 1];
                    i++; // skip next one
                }
            } else if (current.startsWith("-")) {
                if (i + 1 < args.length && !args[i + 1].startsWith("-")) {
                    argMap.put(current, args[i + 1]);
                    i++;
                } else {
                    argMap.put(current, null); // flag with no value
                }
            } else {
                extras.add(current);
            }
        }

        // Output
        if (scriptName != null) {
            System.out.println("Invoked via script: " + scriptName);
        }

        System.out.println("Flags and values:");
        for (Map.Entry<String, String> entry : argMap.entrySet()) {
            System.out.println(entry.getKey() + " = " + entry.getValue());
        }

        System.out.println("Positional/extra args:");
        for (String extra : extras) {
            System.out.println(extra);
        }
    }
}
