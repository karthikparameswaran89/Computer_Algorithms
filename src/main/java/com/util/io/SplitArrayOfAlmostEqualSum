import scala.collection.mutable.ArrayBuffer

object SplitArray {
  def splitArray(arr: Array[Int], n: Int): Array[Array[Int]] = {
    val sortedArr = arr.sorted.reverse
    val subarrays = Array.fill(n)(ArrayBuffer.empty[Int])
    for (x <- sortedArr) {
      val idx = subarrays.zipWithIndex.minBy { case (subarray, _) => subarray.sum }._2
      subarrays(idx) += x
    }
    subarrays.map(_.toArray).reverse
  }
}
